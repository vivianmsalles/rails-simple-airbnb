<br>
<div class="d-flex justify-content-end mr-4"><%= link_to "Add a flat", new_flat_path, class:"btn btn-outline-primary"%></div>
<br>
<div class="container">
  <h1 class="mx-3">All our Flats (<%= @flats.count %>)</h1>
  <div class="d-flex justify-content-start flex-wrap mt-3">
    <br>
    <% @flats.each do |flat| %>
      <div class="card">
        <img src="#" />
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <div class="card-bottom d-flex justify-content-start">
          <div><i class="fas fa-user-friends"></i>  <%= flat.number_of_guests%></div>
          <div><i class="fas fa-euro-sign ml-3"></i>  <%= flat.price_per_night %></div>
        </div>
        <div class="d-flex ml-0 my-2">
          <%= link_to "More info", flat_path(flat), class:"mr-3" %>
          <%= link_to "Edit", edit_flat_path(flat), class:"mr-3" %>
          <%= link_to "Delete",
                      flat_path(flat),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this card?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
